<script type="text/javascript">
    jq(function() {

      jq("#monthsDispensed input").change(function() {
        var monthsDispensed= htmlForm.getValueIfLegal('monthsDispensed.value');
        console.log("months dispensed: " + monthsDispensed);
          if (typeof monthsDispensed !== "undefined" &amp;&amp; monthsDispensed !== null &amp;&amp; (monthsDispensed.length > 0)) {

              var today = new Date();
              var currentEncounterDate = '<lookup expression="encounter.getEncounterDatetime().getTime()"/>';
              if (typeof currentEncounterDate !== "undefined" &amp;&amp; currentEncounterDate !== null &amp;&amp; (currentEncounterDate.length > 0)) {
                console.log("currentEncounterDate= " + currentEncounterDate);
                today = new Date(+currentEncounterDate);
                console.log("today= " + today);
              }

              var currentDate = htmlForm.getValueIfLegal('nextDispenseDate.value');
              console.log("currentDate: " + currentDate);
              today.setDate(today.getDate() + 28 * monthsDispensed);

              console.log("today: " + today.toISOString().slice(0,10));
              setValue('nextDispenseDate.value', today.toISOString().slice(0,10));
          }
      });
    });
</script>


<htmlform formUuid="9EE91561-42A0-4E1C-9469-ABA6726056BE" formName="Patient Registration Contact Person" formEncounterType="873f968a-73a8-4f9c-ac78-9f4778b751b6" formVersion="1.0">

    <ifMode mode="VIEW" include="false">
        <uiInclude provider="registrationapp" javascript="field/personAddressWithHierarchy.js" />

        <script type="text/javascript">

            jq(function() {

                var personAddressWithHierarchy = {
                    id: 'contactAddress',
                    container: jq('#contactAddress-container'),
                    initialValue: null,
                    shortcutFor: 'address1',
                    manualFields: ['address2']
                }

                PersonAddressWithHierarchy(personAddressWithHierarchy);

                // remove the first title span that is automatically generated by the HFE
                if ( jq("#contactPerson span.title").length ) {
                    jq("#contactPerson span.title").remove();
                }

                // hack to hide the "required" * which take up too much space and don't float properly
                jq('#contactPerson .required').hide();

            });
        </script>
    </ifMode>


    <ifMode mode="VIEW" include="false">
        <h2><uimessage code="zl.registration.patient.contactPerson.header"/></h2>
    </ifMode>

    <div class="hidden">
        <encounterProviderAndRole default="currentUser" encounterRole="cbfe0b9d-9923-404c-941b-f048adc8cdc0" required="true"/>
        <encounterLocation default="SessionAttribute:emrContext.sessionLocationId"/>
    </div>

    <input id="displayEncounterDate" value="false" type="hidden" />

    <section id="contactPerson" sectionTag="section">

        <fieldset>

            <obsgroup groupingConceptId="PIH:PATIENT CONTACTS CONSTRUCT">

                <div>
                    <!-- edit mode of name/relationship -->
                    <ifMode mode="VIEW" include="false">
                        <div class="left">
                            <h3><uimessage code="zl.registration.patient.contactPerson.contactName.question"/></h3>
                            <p class="left">
                                <obs conceptId="PIH:NAMES AND FIRSTNAMES OF CONTACT" id="contactName" showUnits="false" unitsCssClass="append-to-value" size="20" required="true"/>
                            </p>
                        </div>

                        <div class="right">
                            <h3><uimessage code="zl.registration.patient.contactPerson.relationships.label"/></h3>
                            <p>
                                <obs conceptId="PIH:RELATIONSHIPS OF CONTACT" id="contactRelationship" showUnits="false" unitsCssClass="append-to-value" size="20" required="true"/>
                            </p>
                        </div>
                    </ifMode>

                    <!-- view mode of name/relationship -->
                    <ifMode mode="VIEW" include="true">
                        <div>
                            <h3><uimessage code="zl.registration.patient.contactPerson.contactName.question"/></h3>
                            <p class="left">
                                <obs conceptId="PIH:NAMES AND FIRSTNAMES OF CONTACT" id="contactFirstName" showUnits="false" unitsCssClass="append-to-value" size="20" required="true"/>
                            </p>
                        </div>

                        <div>
                            <h3><uimessage code="zl.registration.patient.contactPerson.relationships.label"/></h3>
                            <p class="left">
                                <obs conceptId="PIH:RELATIONSHIPS OF CONTACT" id="contactRelationship" showUnits="false" unitsCssClass="append-to-value" size="20" required="true"/>
                            </p>
                        </div>
                    </ifMode>

                    <!-- edit mode of address -->
                    <ifMode mode="VIEW" include="false">
                        <div id="contactAddress-container">
                            <h3><uimessage code="zl.registration.patient.contactPerson.address.label"/></h3>
                            <div>
                                <h3><uimessage code="pihcore.patientRegistration.contact.address.shortcut"/></h3>
                                <input type="text" class="address-hierarchy-shortcut" size="60"/>
                            </div>
                            <div>
                                <h3><uimessage code="haiticore.address.country"/></h3>
                                <obs class="level" conceptId="PIH:Country" id="contactAddress-country" showUnits="false" unitsCssClass="append-to-value" size="20" required="true"/>
                            </div>
                            <div>
                                <h3><uimessage code="haiticore.address.stateProvince"/></h3>
                                <obs class="level" conceptId="PIH:State Province" id="contactAddress-stateProvince" showUnits="false" unitsCssClass="append-to-value" size="20" required="true"/>
                            </div>
                            <div>
                                <h3><uimessage code="haiticore.address.cityVillage"/></h3>
                                <obs class="level" conceptId="PIH:City Village" id="contactAddress-cityVillage" showUnits="false" unitsCssClass="append-to-value" size="20" required="true"/>
                            </div>
                            <div>
                                <h3><uimessage code="haiticore.address.neighborhoodCell"/></h3>
                                <obs class="level" conceptId="PIH:Address3" id="contactAddress-address3" showUnits="false" unitsCssClass="append-to-value" size="20" required="true"/>

                            </div>
                            <div>
                                <h3><uimessage code="haiticore.address.address1"/></h3>
                                <obs class="level" conceptId="PIH:Address1" id="contactAddress-address1" showUnits="false" unitsCssClass="append-to-value" size="20"/>
                            </div>
                            <div>
                                <h3><uimessage code="haiticore.address.address2"/></h3>
                                <obs class="level" conceptId="PIH:Address2" id="contactAddress-address2" showUnits="false" unitsCssClass="append-to-value" size="20"/>

                            </div>
                        </div>
                    </ifMode>

                    <!-- view mode of address -->
                    <ifMode mode="VIEW" include="true">
                        <div>
                            <h3><uimessage code="zl.registration.patient.contactPerson.address.label"/></h3>
                            <p class="left">
                                <obs class="level" conceptId="PIH:Address2" id="contactAddress-address2" showUnits="false" unitsCssClass="append-to-value" size="20"/><br/>
                                <obs class="level" conceptId="PIH:Address1" id="contactAddress-address1" showUnits="false" unitsCssClass="append-to-value" size="20"/><br/>
                                <obs class="level" conceptId="PIH:Address3" id="contactAddress-address3" showUnits="false" unitsCssClass="append-to-value" size="20"/>,
                                <obs class="level" conceptId="PIH:City Village" id="contactAddress-cityVillage" showUnits="false" unitsCssClass="append-to-value" size="20"/><br/>
                                <obs class="level" conceptId="PIH:State Province" id="contactAddress-stateProvince" showUnits="false" unitsCssClass="append-to-value" size="20"/>,
                                <obs class="level" conceptId="PIH:Country" id="contactAddress-country" showUnits="false" unitsCssClass="append-to-value" size="20"/>
                            </p>
                        </div>
                    </ifMode>

                    <div>
                        <h3><uimessage code="registrationapp.patient.phone.label"/></h3>
                        <p class="left">
                            <obs conceptId="PIH:TELEPHONE NUMBER OF CONTACT" id="contactPhoneNumber" showUnits="false" unitsCssClass="append-to-value" size="20" required="true" />
                        </p>
                    </div>
                </div>

            </obsgroup>

        </fieldset>
    </section>

    <ifMode mode="VIEW" include="false">
        <div id="buttons">
            <button class="submitButton confirm right" onclick="submitHtmlForm()"><uimessage code="mirebalais.save"/><i class="icon-spinner icon-spin icon-2x" style="display: none; margin-left: 10px;"></i></button>
            <button type="button" class="cancel"><uimessage code="emr.cancel"/></button>
        </div>
    </ifMode>

</htmlform>

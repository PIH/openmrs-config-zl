            <ifMode mode="VIEW" include="false">
                <div class="left">
                    <h3><uimessage code="zl.registration.patient.insurance.insuranceName.label"/></h3>
                    <p>

                        <obs conceptId="PIH:Haiti insurance company name" id="insuranceName"
